<%- include('partials/header') %>
<div class="form-container register-main">
    <% if(locals.error) { %>
        <div class="alert alert-danger"><%= error %></div>
    <% } %>
    <div class="form main-form">
        <form method="post" class="login-form">
            <div class="form-group label-floating">
                <label for="i5" class="control-label">Name</label>
                <input type="text" name="firstName" id="firstName" class="form-control" value="<%= locals.firstName || '' %>" required />
            </div>
            <div class="form-group label-floating">
                <label for="i5" class="control-label">Username</label>
                <input type="text" name="username" id="username" class="form-control"  value="<%= locals.username || '' %>" required />
            </div>
            <div class="form-group label-floating">
                <label for="i5" class="control-label">Email</label>
                <input type="email" name="lastName" id="lastName" class="form-control" value="<%= locals.lastName || '' %>" required />
            </div>
            <div class="form-group label-floating">
                <label for="i5" class="control-label">Password</label>
                <input type="password" name="password" id="password" class="form-control" required />
            </div>
            <button type="submit" class="btn btn-primary">Register</button>
            <p class="message"> Please Login <a href="/login"> here </a> </p>
        </form>
    </div>
</div>
<%- include('partials/footer') %>
